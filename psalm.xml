<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="src\config" />
            <directory name="src\Modules\Identity" />
            <directory name="src\Modules\Language" />
            <directory name="src\Modules\Name" />
            <directory name="src\Modules\Surname" />
            <directory name="src\Modules\Tariff" />
        </ignoreFiles>
    </projectFiles>
</psalm>